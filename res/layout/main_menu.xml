<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/invite_for_coffee_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="inviteForCoffee"
        android:text="Invite For Coffee" />
    
    <Button
        android:id="@+id/view_group_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewGroupStatus"
        android:text="View Group Status" />
    
	<TextView 
	    android:id="@+id/friends_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Friends"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:background="#666666"
	    android:textColor="#ffffff"
	    />
	
	 <ListView android:id="@+id/friends_list" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	/>
	 
	 <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal">
    
	    <EditText android:id="@+id/enter_username" 
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:hint="Enter username to add" />
	    
	    <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Add Friend" 
	        android:onClick="addFriend"/>   
	</LinearLayout>
    
	 
	 
	<TextView 
	    android:id="@+id/friend_invitations_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Friend Invitations"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:background="#666666"
	    android:textColor="#ffffff"
	    />
	
	 <ListView android:id="@+id/friend_invitations_list" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	/>
	 
	<TextView 
	    android:id="@+id/group_invitations_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Group Invitations"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:background="#666666"
	    android:textColor="#ffffff"
	    />
	
	 <ListView android:id="@+id/group_invitations_list" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	/>
    
</LinearLayout>